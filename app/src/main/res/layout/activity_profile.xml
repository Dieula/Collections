<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dieula.collections.activities.ProfileActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">


        <RelativeLayout
            android:id="@+id/rlUserInfo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/ivMaj"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_alignStart="@+id/tvFollowerCount"
                android:text="154"
                android:textColor="#222"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTagLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvStatusCount"
                android:layout_alignStart="@+id/tvStatusCount"
                android:text="231"
                android:textColor="@color/bb_darkBackgroundColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvTagLine"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/tvFollowingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="17dp"
                android:layout_marginEnd="19dp"
                android:text="FOLLOWING"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFollowerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvFollowingCount"
                android:layout_alignBottom="@+id/tvFollowingCount"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="15dp"
                android:layout_toStartOf="@+id/tvFollowingCount"
                android:text="FOLLOWERS"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStatusCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginStart="11dp"
                android:text="FOLLOWING"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/tvFollowerCount"
                android:layout_alignBottom="@+id/tvFollowerCount"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvville"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Dieula DAREUS"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvville"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Palo Alto,CA"
                android:layout_above="@+id/tvUserName"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:id="@+id/ivMaj"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:layout_marginTop="17dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
